<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dff1f0"
    tools:context=".ui.neighbour_list.NeighbourDetailScreenActivity">




    <ImageView
        android:id="@+id/activity_detail_avatar_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/activity_detail_name_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#ffffff"
        android:paddingStart="25dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:gravity="bottom"
        android:textSize="30sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/activity_detail_address_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#ffffff"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="25dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"

        />

    <TextView
        android:id="@+id/activity_detail_phone_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="25dp"
        android:background="#ffffff"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/activity_detail_facebook_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingStart="25dp"
        android:paddingBottom="5dp"
        android:background="#ffffff"
        android:textSize="18sp"
        />


        <TextView
            android:id="@+id/activity_detail_aboutMy_tittle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:paddingStart="25dp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:background="#ffffff"
            android:gravity="bottom"
            android:text="A propos de moi"
            android:textSize="30sp"
            android:textColor="#000000"
            />

    <TextView
        android:id="@+id/activity_detail_aboutMy_test"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:textSize="18sp"

        />



</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_detail_favorite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:backgroundTint="@color/buttonUp"
        android:src="@drawable/ic_star_white_24dp"
        android:tint="#e5da10"
        android:clickable="true"
        android:layout_gravity="bottom|end"
        app:layout_anchor="@id/activity_detail_avatar_img"
        app:layout_anchorGravity="bottom|right|end"
        />
</android.support.design.widget.CoordinatorLayout>





